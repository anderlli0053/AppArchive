        "64bit": {
            "url": "https://ftp.vector.co.jp/73/41/2750/ClipboardHistory_x64_190.zip",
            "hash": "19e9e9ed5ee4d0e174d09bdaad2128e4034785a9c88d5b97ee0931b712148318",
            "bin": "ClipboardHistory_x64.exe",
            "shortcuts": [
