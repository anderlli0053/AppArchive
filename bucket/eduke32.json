        "",
        "    $persist_dir\\autoload"
    ],
    "architecture": {
        "32bit": {
            "url": "https://dukeworld.com/eduke32/synthesis/20230529-10285-726e72560/eduke32_win32_20230529-10285-726e72560.7z",
